{% extends 'base.html.twig' %}

{% block body %}
    <h1>Articles list</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Content</th>
                <th>Author</th>
                <th>Publicationdate</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.name }}</td>
                <td>{{ article.content | raw  }}</td>
                <td>{{ article.author.username }}</td>
                <td>{% if article.publicationDate %}{{ article.publicationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ article.category.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('article_show', { 'id': article.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('article_edit', { 'id': article.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('article_new') }}">Create a new article</a>
        </li>
    </ul>



  <ul class="pagination">
    {% if currentPage == 1 %}
    <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
    {% else %}
    <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_left</i></a></li>

    {% endif %}
    {% for i in 1..dernierePage %}
    <li class="waves-effect"><a href="{{path('article_list',{page: i})}}">{{ i }}</a></li>

    {% endfor %}
    {% if currentPage == dernierePage %}
    <li class="disabled"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
    {% else %}
    <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
    {% endif %}
  </ul>
{% endblock %}
