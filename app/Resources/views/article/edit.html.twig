{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <h1 align="center">Modifier un article</h1>

        {{ form_start(edit_form, { 'attr': {'class': 'col s12 centered'}}) }}
        {{ form_row(edit_form.name, { 'attr': {'class': 'row'},'label':'Nom'}) }}

        {{ form_row(edit_form.tags, { 'attr': {'class': 'row'},'label':'Tags'}) }}
        {{ form_row(edit_form.category, { 'attr': {'class': 'row'},'label':'Catégorie'}) }}
        {{ form_row(edit_form.content, { 'attr': {'class': 'row fr-view'},'label':'Contenu'}) }}
        <div class="row">
        {{ form_row(edit_form.image,{'attr':{'class' :'file-field input-field file-path-wrapper col s6'},'label':'Image ','required':false})}}
        <img class="col s6" src="{{ asset('images-articles/'~ article.image)}}" alt="{{ article.name }}" />
      </div>
        {{ form_row(edit_form.publication_date,{'attr':{'class' :'datepicker','type':'datetime'},'label':'Date de publication '})}}
        {{ form_row(edit_form.submit, { 'attr': {'class': 'btn waves-effect waves-light
'},'label':'Créer'}) }}

        {{ form_end(edit_form) }}
    </div>
{% endblock %}
