{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
  <div class="col s12">

    <h1 align="center">Catégories</h1>
    <a href="{{ path('category_new')}}"><button class="btn waves-effect waves-light" type="submit" name="action">Nouvelle catégorie
  </button></a>
    <table>
       <thead>
         <tr>
             <th data-field="id">Identifiant</th>
             <th data-field="name">Nom</th>
             <th></th>
         </tr>
       </thead>

       <tbody>
         {% for category in categories %}
             <tr>
                 <td>{{ category.id }}</td>
                 <td>{{ category.name }}</td>
                 <td><a href="{{ path('category_edit', { 'id': category.id }) }}">Modifier</a>
                   <a href="{{ path('category_delete', { 'id': category.id }) }}"     data-method="delete"
>Supprimer</a>
                 <a href="{{  path('category',{name: category.name}) }}">Voir les articles</a></td>

             </tr>
         {% endfor %}

        </tbody>
    </table>
  </div>
</div>
{% endblock %}
